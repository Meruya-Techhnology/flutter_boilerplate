    "version": "0.2.0",
    "configurations": [
        {
            "name": "flutter_boilerplate [Development]",
            "request": "launch",
            "type": "dart", 
            "args": [
                "--dart-define",
                "PROFILE=development",
            ],
        },
        {
            "name": "flutter_boilerplate [Staging](profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
            "args": [
                "--dart-define",
                "PROFILE=staging",
            ],
        },
        {
            "name": "flutter_boilerplate [Production](release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "args": [
                "--dart-define",
                "PROFILE=production",
            ],
        }
    ]
}